{
    "server": {
        "start": true,
        "port": 8080,
        "morgan": {
            "disabled": true,
            "config": "tiny"
         }
    },
    "modbus": {
        "serial": [{
            "disabled": false,
            "device": "/dev/ttyUSB0",
            "options": {
                "baudRate": 115200,
                "parity": "none"
            }
        }],
        "devices": [{
            "disabled": false,
            "type": "modbus-ascii",
            "class": "HotWaterController",
            "name": "hwc:1",
            "serialDevice": "/dev/ttyUSB0",
            "slaveAddress": 1,
            "timeoutMilis": 200
        }]
    },
    "controller": {
        "startMode": "power",
        "powerSetting": {
            "minWatts": 0,
            "maxWatts": 2000,
            "desiredPower": 1000
        }
    },
    "monitor": {
        "disabled": false,
        "pollingPeriodMillis": 2000,
        "tempFile": {
            "path": ".monitor-hwc-temp",
            "backups": 3
        }
    },
    "statistics": {
        "disabled": false,
        "timeslotSeconds": 10,
        "dbtyp": "csvfile",
        "csvfile": {
            "filename": "hwc-data_%Y-%M-%D.csv"
        }
    },
    "debug": {
        "depth": 3,
        "colors" : true,
        "wtimediff": 6,
        "time": "ddd, yyyy-mm-dd HH:MM:ss.l",
        "wmodule": 15,
        "wlevel": 6,
        "location": "-*",
        "enabled": "*, *::WARN, *::INFO"
    }
}
